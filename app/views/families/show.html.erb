<div class="page-header">
  <h1><%=t '.title', :default => Family.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= Family.human_attribute_name(:number) %>:</strong></dt>
  <dd><%= @family.number %></dd>
  <dt><strong><%= Family.human_attribute_name(:genotype) %>:</strong></dt>
  <dd><%= @family.genotype %></dd>
  <dt><strong><%= Mouse.human_attribute_name(:male) %>:</strong></dt>
  <dd><%= @family.male_count %></dd>
  <dt><strong><%= Mouse.human_attribute_name(:female) %>:</strong></dt>
  <dd><%= @family.female_count %></dd>
  <dt><strong><%= Family.human_attribute_name(:birth) %>:</strong></dt>
  <dd><%= @family.birth %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              families_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_family_path(@family), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              family_path(@family),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
