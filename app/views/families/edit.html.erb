<div class="page-header">
  <h1>ケージ編集</h1>
</div>
<%= form_for(@family, :html => { :class => 'form-horizontal' }) do |f| %>
  <div class="control-group">
    <%= f.label :number %>
    <div class="controls">
      <%= f.number_field :number %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :genotype %>
    <div class="controls">
      <%= f.select :genotype, Family.genotype.options %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :birth %>
    <div class="controls">
      <%= f.date_field :birth %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                families_path, :class => 'btn' %>
  </div>
<% end %>
